<aside id="sidebar">

    <section class="logotype">
        <a href="@Url.Content("~/")">
            <img src="/images/logotypes/Logo.svg" alt="alpha logo">
            <span>alpha</span>
        </a>
    </section>
    <nav class="nav-links">
        <a asp-controller="Projects" asp-action="Index" class="nav-link @(Context.Request.Path.Value!.StartsWith("/Projects") ? "active" : "")">
            <i class="fa-duotone fa-solid fa-briefcase"></i>
            <span>Projects</span>
        </a>
        <a asp-controller="Clients" asp-action="Index" class="nav-link @(Context.Request.Path.Value!.StartsWith("/Clients") ? "active" : "")">
            <i class="fa-duotone fa-solid fa-handshake"></i>
            <span>Clients</span>
        </a>

        @if(User.IsInRole("Administrator")) 
        {
            <a asp-controller="Members" asp-action="Index" class="nav-link @(Context.Request.Path.Value!.StartsWith("/admin/members") ? "active" : "")">
                <i class="fa-duotone fa-solid fa-user-group"></i>
                <span>Members</span>
            </a>
            <a asp-controller="Status" asp-action="Index" class="nav-link @(Context.Request.Path.Value!.StartsWith("/admin/status") ? "active" : "")">
                <i class="fa-solid fa-chart-simple"></i>
                <span>Statuses</span>
            </a>
        }
        
    </nav>

</aside>
