@model AddClientViewModel

<section class="modal modal-clients" id="add-client-modal">
    <div class="card client-card">
        <div class="card-header">
            <h3>New Client</h3>
            <button class="btn-close" data-type="close-project-modal" data-target="#add-client-modal"></button>
        </div>
        <div class="card-body">
            <form method="post" asp-controller="Clients" asp-action="Create" novalidate>
                <div class="form-group">
                    <label class="form-label">Client Name</label>
                    <input class="form-input" type="text" placeholder="Client name" asp-for="ClientName" />
                    <span asp-validation-for="ClientName"></span>
                </div>
                

                <div class="form-group">
                    <label class="form-label">Client Email</label>
                    <input class="form-input" type="text" placeholder="Client email address" asp-for="Email"/>
                </div>

                <div class="form-group">
                    <label class="form-label">Client Phone</label>
                    <input class="form-input" type="text" placeholder="Client phone number" asp-for="PhoneNumber" />
                </div>

                <button type="submit" class="btn">Add Client</button>

            </form>
        </div>
    </div>

</section>