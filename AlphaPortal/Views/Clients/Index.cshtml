@using Domain.Models
@model ClientsViewModel
@{
    ViewData["Title"] = "Clients";
}

<div id="clients" class="page">
    <div class="page-header">
        <h2>Clients</h2>
        <button type="button" class="btn" data-type="modal" data-target="#add-client-modal">
            <i class="fa-duotone fa-solid fa-plus"></i>
            <span>Add Client</span>
        </button>
    </div>

    <section class="member-list">
        @foreach (var client in Model.Clients) 
        {
            @await Html.PartialAsync("ListItems/_ClientListItemPartial", client)
        }
    </section>
</div>


@await Html.PartialAsync("Modals/_AddClientModalPartial", Model.AddClientFormData)
@await Html.PartialAsync("Modals/_EditClientModalPartial", Model.EditClientFormData)